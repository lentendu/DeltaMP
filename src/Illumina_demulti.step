# load modules
module load DeltaMP/DELTAMP_VERSION

# Define Variables
while read var val; do unset $var ; if [[ $val == "(["* ]]; then declare -A $var="`echo $val | sed 's/].\"/]=\"/g'`" ; else declare $var="$val" ; fi ; done < config/env.txt
. $BIN/check_previous_step

# Define the library to demultiplex
read LIB_NAME FWD_SUF RVS_SUF <<<`sed -n ${ARRAY_TASK}'p' config/lib2.list`
FWD_LIB=${LIB_NAME}${FWD_SUF/.$RAW_EXT.*/}
RVS_LIB=${LIB_NAME}${RVS_SUF/.$RAW_EXT.*/}
cd libraries

#Define barcode difference allowed for the library
if [ $BDIFFS == "a" ]
then
	unset BDIFFS
	grep -v ">" fasta/oligos.$LIB_NAME | awk '{sub("\\^","");print "barcode "$1}' > MID.$LIB_NAME
	BDIFFS=`barcode_mismatch_check.sh MID.$LIB_NAME`
	rm MID.$LIB_NAME
fi

# cutadapt with 5' anchored adaptors
BLENGTH=$(grep -o -m 1 -E "[ATCG]+" fasta/oligos.${LIB_NAME} | awk '{print length($1)}')
BDISS=$(awk -v L=$BLENGTH -v D=$BDIFFS 'BEGIN{printf "%.2g\n", D/L}')
cutadapt -g file:fasta/oligos.${LIB_NAME} -G file:fasta/oligos.${LIB_NAME} -e ${BDISS} --no-indels --trimmed-only -o fastq/{name}.${FWD_LIB}.fastq.bz2 -p fastq/{name}.${RVS_LIB}.fastq.bz2 ${FWD_LIB}.fastq.bz2 ${RVS_LIB}.fastq.bz2 > fastq/log_cutadapt.demultiplex.${LIB_NAME}.txt

# list files and directories
. $BIN/list_step_files.sh

echo END
